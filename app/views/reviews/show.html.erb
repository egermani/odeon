<p id="notice"><%= notice %></p>

<div class="still">
  <img width='800' height='450' src="<%= @review.movie.still_path %>">
</div>
<p>
  <strong>Movie:</strong>
  <%= @review.movie.title %>
</p>

<p>
  <strong>Stars:</strong>
  <%= @review.rating %>/10
</p>

<p>
  <strong>By:</strong> <%= @review.reviewer.username %>
</p>



<p>
  <strong>Thesis:</strong>
  <%= @review.thesis %>
</p>

<p>
  <strong>Title:</strong>
  <%= @review.title %>
</p>

<p>
  <%= @review.body %>
</p>

<div id="critiques-container">
  <ul id="critique-list">
  <% @review.critiques.each do |crit| %>
    <li id="<%=crit.id%>" ><%=crit.title%><br>
      <%=crit.body%><br>
      by <%=crit.critiquer.username%>
      <a id="show_replies" href="<%=crit.id%>">show replies</a>
        <ul id="replies-list">
          <%crit.replies.each do |reply| %>
            <li><%=reply.body%><br>
              by <%=reply.replier.username%>
            </li>
          <% end %>
          <% @critique = Critique.find(crit.id)%>
          <% @reply = Reply.new() %>
          <%= render 'replies/form' %>
        </ul>
    </li>
  <% end %>
</div>

<div id="critique-form">
  <% @critique = Critique.new() %>
  <%= render 'critiques/form' %>
</div>

<%= link_to 'Edit', edit_review_path(@review) %> |
<%= link_to 'Back', reviews_path %>
