<% case @crit.keypoint_id %>
  <% when 1 %>
    <i class="crit-icon glyphicon glyphicon-user"></i>
  <% when 2 %>
    <i class="crit-icon glyphicon glyphicon-film"></i>
  <% when 3 %>
    <i class="crit-icon glyphicon glyphicon-music"></i>
  <% when 4 %>
    <i class="crit-icon glyphicon glyphicon-pencil"></i>
  <% when 5 %>
    <i class="crit-icon glyphicon glyphicon-fire"></i>
  <% when 6 %>
    <i class="crit-icon glyphicon glyphicon-asterisk"></i>
<% end %>