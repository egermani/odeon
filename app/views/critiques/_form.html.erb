<%= form_for(@critique) do |f| %>
  <% if @critique.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@critique.errors.count, "error") %> prohibited this critique from being saved:</h2>

      <ul>
      <% @critique.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :user_id, :value => session[:user_id]%>
  </div>
  <div class="field">
    <%= f.hidden_field :review_id, :value => @review.id%>
  </div>
  <div class="keypoint-fields">
    <%= f.radio_button(:keypoint_id, "1") %>
    <%= f.label(:name, "Acting", :class => "glyphicon glyphicon-user") %>
    <%= f.radio_button(:keypoint_id, "2") %>
    <%= f.label(:name, "Cinematography", :class => "glyphicon glyphicon-film") %>
    <%= f.radio_button(:keypoint_id, "3") %>
    <%= f.label(:name, "Score", :class => "glyphicon glyphicon-music") %>
    <%= f.radio_button(:keypoint_id, "4") %>
    <%= f.label(:name, "Writing", :class => "glyphicon glyphicon-pencil") %>
    <%= f.radio_button(:keypoint_id, "5") %>
    <%= f.label(:name, "Visual Effects", :class => "glyphicon glyphicon-fire") %>
    <%= f.radio_button(:keypoint_id, "6") %>
    <%= f.label(:name, "Misc.", :class => "glyphicon glyphicon-asterisk") %>
  </div>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit value: "submit critique" %>
  </div>
<% end %>
