<div class="still center featured">
  <div class="featured-image">
    <a href="/movies/<%=@movies[0].id%>"><%= image_tag(@movies[0].still_path, width: "100%") %></a>
    <h1><%=@movies[0].title.upcase%></h1>
  </div>
  <div class="featured-text padding-top-2">
    <p class="featured-thesis">
      <i><%= @movies[0].reviews[0].thesis %></i>
    </p>
    <p class="landing-review padding-top-2">
      <%= truncate(@movies[0].reviews[0].body, length: 400) %><a href="/reviews/<%=@movies[0].reviews[0].id%>">read more</a>
    </p>
  </div>
</div>
